# Makefile.in - Template for Makefile generated by configure

# Variables
CC = @CC@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

# Directories
srcdir = @srcdir@
top_srcdir = @top_srcdir@
top_builddir = .

# Files
SOURCES = main.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXECUTABLE = spoinkstore

# Targets
all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBS)

%.o: %.cpp
	$(CC) $(CFLAGS) -c -o $@ $<

# Install
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

install: $(EXECUTABLE)
	install -d $(DESTDIR)$(bindir)
	install -m 755 $(EXECUTABLE) $(DESTDIR)$(bindir)

# Clean
clean:
	rm -f $(OBJECTS) $(EXECUTABLE)

.PHONY: all install clean
